{
    "elements":
            [
            ],
    "actions":
            [
                { 
                    "type": "RowLayout",
                    "items": [
                        {
                            "type": "HorizontalSlider",
                            "name": "ValueR",
                            "caption": "Red",
                            "minimum": 0,
                            "maximum": 255,
                            "onChange": "MS35_SetRGB($id, $ValueR, $ValueG, $ValueB);"
                        },
                        {
                            "type": "HorizontalSlider",
                            "name": "ValueG",
                            "caption": "Green",
                            "minimum": 0,
                            "maximum": 255,
                            "onChange": "MS35_SetRGB($id, $ValueR, $ValueG, $ValueB);"
                        }, {
                            "type": "HorizontalSlider",
                            "name": "ValueB",
                            "caption": "Blue",
                            "minimum": 0,
                            "maximum": 255,
                            "onChange": "MS35_SetRGB($id, $ValueR, $ValueG, $ValueB);"
                        }]
                },
                { 
                    "type": "RowLayout",
                    "items": [
                        {
                            "type": "HorizontalSlider",
                            "name": "ValueP",
                            "caption": "Program",
                            "minimum": 1,
                            "maximum": 9,
                            "onChange": "MS35_RunProgram($id, $ValueP);"
                        }, {
                            "type": "HorizontalSlider",
                            "name": "ValueS",
                            "caption": "Speed",
                            "minimum": 0,
                            "maximum": 8,
                            "onChange": "MS35_SetSpeed($id, $ValueS);"
                        }, {
                            "type": "HorizontalSlider",
                            "name": "ValueH",
                            "caption": "Brightness",
                            "minimum": 1,
                            "maximum": 3,
                            "onChange": "MS35_SetBrightness($id, $ValueH);"
                        }]
                },
                { 
                    "type": "RowLayout",
                    "items": [
                        {
                            "type": "Button",
                            "label": "Play",
                            "onClick": "MS35_Play($id);"
                        },
                        {
                            "type": "Button",
                            "label": "Pause",
                            "onClick": "MS35_Pause($id);"
                        },
                        {
                            "type": "Button",
                            "label": "Stop",
                            "onClick": "MS35_Stop($id);"
                        }]
                },
                { 
                    "type": "RowLayout",
                    "items": [
                        {
                            "type": "Button",
                            "label": "ON",
                            "onClick": "MS35_SendSwitch($id, true);"
                        },
                        {
                            "type": "Button",
                            "label": "OFF",
                            "onClick": "MS35_SendSwitch($id, false);"
                        }]
                }
            ]
}
